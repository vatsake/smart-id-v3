<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for our project.</description>
    <rule ref="PSR12">
    </rule>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="260"/>
            <property name="absoluteLineLimit" value="260"/>
        </properties>
    </rule>

    <file>src</file>
</ruleset>